with STM32.LTDC;
with STM32.LCD_ILI9341;

--  This is the ILI9341 LCD display driver controlled via the LTDC peripheral.
package STM32.LCD is new
  STM32.LTDC (LCD_Width      => 240,
              LCD_Height     => 320,
              LCD_HSync      => 9,
              LCD_HBP        => 29,
              LCD_HFP        => 2,
              LCD_VSYNC      => 1,
              LCD_VBP        => 3,
              LCD_VFP        => 2,
              PLLSAI_R       => 4,
              DivR           => 4,
              Initialize_LCD => STM32.LCD_ILI9341.Initialize);
