with Memory_Barriers;
with Cortex_M_SVD.SCB;

procedure Cortex_M.Reset is
begin
   Memory_Barriers.Data_Synchronization_Barrier;

   Cortex_M_SVD.SCB.SCB_Periph.AIRCR :=
     (SYSRESETREQ => True,
      VECTKEY     => Cortex_M_SVD.SCB.Key,
      others      => <>);

   Memory_Barriers.Data_Synchronization_Barrier;

   loop
      null;
   end loop;
end Cortex_M.Reset;
